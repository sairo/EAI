<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:jms="http://servicemix.apache.org/jms/1.0"
		xmlns:eai="http://pwr.tin.tip.sw.pd.eai"
		xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://servicemix.apache.org/jms/1.0
         http://servicemix.apache.org/jms/1.0/servicemix-jms.xsd">
         
         <jms:consumer service="eai:algorithmsReplayService"
                  endpoint="EAI"
                  targetService="eai:algorithmsDSLRouter"
                  destinationName="queue/ALGORITHMS-REPLAY"
                  connectionFactory="#connectionFactory" 
                  marshaler="#marshaler" />

		<jms:provider service="eai:algorithmsInService"
					  endpoint="EAI"
					  destinationName="queue/ALGORITHMS-IN"
					  deliveryMode="1"
              		  connectionFactory="#connectionFactory"/>

		<bean id="marshaler" class="org.apache.servicemix.jms.endpoints.DefaultConsumerMarshaler">
		   <property name="mep" value="http://www.w3.org/2004/08/wsdl/in-only" />
		</bean>
		<bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		    <property name="brokerURL" value="tcp://localhost:61616" />
		</bean>
		<bean class="org.apache.servicemix.common.osgi.EndpointExporter" />
</beans>